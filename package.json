{
  "name": "cookery-hub",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend/recipe-app"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend/recipe-app",
    "build:frontend": "npm run build --workspace=frontend/recipe-app",
    "test:frontend": "npm run test --workspace=frontend/recipe-app",
    "dev:backend": "cd backend && PYENV_VIRTUALENV_NAME=$(cat .python-version) && source /Users/udaykiranreddybilla/.pyenv/versions/$PYENV_VIRTUALENV_NAME/bin/activate && flask run",
    "dev": "npm-run-all --parallel dev:frontend dev:backend"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}